<div class="main-container">
    <div class="display-info">
        Welcome <span id="username-span" data-username=<%- user.name %>>
            <%- user.name %>
        </span>
    </div>
    <div class="container" id="game-screen">
        <div class="world-holder">
            <div class="clock-parts" id="outer-circle">
                <div class="clock-parts" id="main-circle">
                    <div class="quarter quarter1" id="nav-up">
                        <div class="arrowNav fa fa-arrow-up"></div>
                    </div>
                    <div class="quarter quarter2" id="nav-right">
                        <div class="arrowNav fa fa-arrow-right"></div>
                    </div>
                    <div class="quarter quarter3" id="nav-left">
                        <div class="arrowNav fa fa-arrow-left"></div>
                    </div>
                    <div class="quarter quarter4" id="nav-down">
                        <div class="arrowNav fa fa-arrow-down"></div>
                    </div>
                    <div class="cutout"></div>
                    <!-- append small-circle(s) here -->
                </div>
            </div>

            <div id="clock">
                <div class="hand hour-hand">
                    <div class="hours"></div>
                </div>
                <div class="hand minute-hand">
                    <div class="minutes"></div>
                </div>
                <div class="hand second-hand">
                    <div class="seconds"></div>
                </div>
            </div>

            <div class="spinner move-forward" id="clock-runner">
                <div class="bomb-drop" id="dropper-ALT">
                    <div id="dropper"></div>
                </div>
            </div>
        </div>
        <div id="info-bar">
            <div class="slide-deck">
                <div class="stats">HEALTH: <span id="health-status"></span></div>
            </div>
        </div>

        <div id="info-bar-opponent">
            <div class="slide-deck-opponent">
                <div class="stats-opponent">ENEMY: <span id="health-status-opponent"></span></div>
            </div>
        </div>
    </div>

    <div class="button-box">
        <button type="button" id="add-circles" class="btn btn-lg btn-success">START
        </button>
        <!-- <div class="leaf"></div> -->
    </div>
</div>

